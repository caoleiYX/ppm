<?xml version="1.0" encoding="UTF-8"?>
<!--
assembly 插件 https://gitee.com/geekidea/spring-boot-assembly
-->
<assembly>
    <id>package</id>

<!-- 打包的类型，如果有N个，将会打N个类型的包 -->
    <formats>
        <!-- <format>tar.gz</format> -->
        <format>zip</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!--
            0755->即用户具有读/写/执行权限，组用户和其它用户具有读写权限；
            0644->即用户具有读写权限，组用户和其它用户具有只读权限；
        -->

        <!-- copy bat, shell to /bin -->
        <fileSet>
            <directory>${basedir}/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>**/**.sh</include>
                <include>**/**.bat</include>
            </includes>
        </fileSet>

        <!-- copy docker support to /docker -->
        <fileSet>
            <directory>${basedir}/assembly/docker</directory>
            <outputDirectory>docker</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <!-- copy SQL to /init-sql -->
        <fileSet>
            <directory>${basedir}/assembly/init-sql</directory>
            <outputDirectory>init-sql</outputDirectory>
            <includes>
                <include>**/**.sql</include>
            </includes>
        </fileSet>

        <!--  copy jar file to /apps -->
        <fileSet>
            <directory>${basedir}/target</directory>
            <outputDirectory>apps</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
        </fileSet>

        <!-- 将第三方依赖打包到lib目录中 -->
        <fileSet>
            <directory>${basedir}/target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- md文件 -->
        <fileSet>
            <directory>${basedir}/assembly</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.md</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>
